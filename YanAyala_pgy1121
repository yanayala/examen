def comprar_departamento():
  print('precios de los departamentos')
  print('Tipo A, 3800 UF ')
  print('Tipo B, 3000 UF ')
  print('Tipo C, 2800 UF ')
  print('Tipo D, 3500 UF ')
  print('     Departamentos Disponibles     ')
  rut = int(input('ingrese su rut sin guiones ni puntos'))
  pisos = []
  for i in range(10):
      departamentos = []
      for j in range(40):
          departamentos.append("O")
      piso.append(pisos)
      departamentos[9][A] = "X"
      departamentos[9][D] = "X"
      departamentos[7][B] = "X"
      departamentos[6][C] = "X"
      departamentos[4][A] = "X"
      departamentos[2][B] = "X"
      departamentos[2][C] = "X"
      departamentos[2][D] = "X"
      piso = int(input('ingresa tu piso '))
      tipo = input('ingresa el tipo de departamento tipo A, B, C, D')
      while departamentos[piso][tipo] == "X":
       print('El departamento escogido ya esta ocupado')
       piso = int(input('ingresa nuevamente  tu piso '))
       tipo = input('ingresa nuevamente el tipo de departamento tipo A, B, C, D')
      print('Tu departamento esta libre')
      print('operacion realizada correctamente')

def departamentos_disponibles():
 # Mostrar matriz en pantalla
  for departamentos in pisos:
      for departamento in departamentos:
          print(departamento, end=" ")
      print()
  departamento = int(input('ingresa una ubicacion y te dire si esta ocupada o no '))
  while departamento == departamentos:
   print('la ubicacion ingresada ya esta ocupada')
   departamento = int(input('ingrese nuevamente la ubicacion porque la recien ingresada ya estaba ocupada'))
  print('ubicacion libre')
